{{#each posts}}
<article class="post card">
    <div class="card-header">
        <div class="title">
            {{title}}
        </div>
        <div class="meta">
            Posted by {{user.username}} on {{created_at}}
        </div>
    </div>
    <div class="card-body">  
        <div class="content">
            {{content}}
        </div>
        <a href="/post/{{id}}">
            {{comments.length}} comment(s)
        </a>
    </div>
</article>
{{/each}}